@page
@model C_ManagementSystem.Pages.Forms.AddJobsModel
@{
    ViewData["Title"] = "Add Jobs";
}

<h1>Repair Jobs</h1>
<form method="post">
    <div class="form-group col-md-8">
        <label for="JobID">Job ID</label>
        <input type="number" id="JobID" value="JobID" disabled asp-for="CustomerJob.JobID" placeholder="1" />

        <label for="CusID">Customer ID</label>
        <input type="number" id="CusID" value="CusID" disabled asp-for="CustomerJob.CustomerID" placeholder="00000" />

        <label for="JobDesc">Job Description </label>
        <input type="text" id="JobDesc" asp-for="CustomerJob.JobDesc" placeholder="Job Description" />

        <label for="JobDate">Date of Order </label>
        <input type="date" id="JobDate" asp-for="CustomerJob.JobDate" placeholder="Date" />

        <label for="FrameDesc">Description of Frame</label>
        <input type="text" id="FrameDesc" asp-for="CustomerJob.FrameDesc" placeholder="Enter Breif Description" />

        <label for="LensDesc">Description of Lenses </label>
        <input type="text" id="LensDesc" asp-for="CustomerJob.LensDesc" placeholder="Enter Breif Description" />

        <label for="Subtotal">Subtotal: </label>
        <input type="number" value="" name="Subtotal" id="Subtotal" asp-for="CustomerJob.Subtotal" placeholder="$0.00" />

        <label for="Discount">Discounts</label>
        <input type="number" value="" name="Discount" id="Discount" asp-for="CustomerJob.Discount" placeholder="$0.00" />

        <label for="Total">Total Cost :</label>

        <input type="checkbox" asp-for="CustomerJob.Tax" placeholder="Tax" /> <label>Tax</label>
        <br />
        <input name="__RequestVerificationToken" type="hidden" value="<token_generated_here>" />
        <button type="submit">Submit</button>
        <button type="reset">Reset</button>
    </div>
</form>
